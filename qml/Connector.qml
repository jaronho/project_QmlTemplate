import QtQuick 2.0

Item {
    /***********************************************************************
     ******************************* 公共变量 *******************************
     ***********************************************************************/

    /***********************************************************************
     ******************************* 接收消息 *******************************
     ***********************************************************************/
    Connections {
        target: control;
        onSigInitOk: {
            console.log("init ok!!!");
            if ('undefined' !== typeof(processor)) {
                processor.handleInitOk();
            }
        }
    }

    /***********************************************************************
     ******************************* 发送消息 *******************************
     ***********************************************************************/

    /* 设置鼠标 */
    function setCursor(cursor) {
        control.onSetCursor(cursor);
    }

    /* 记录日志 */
    function recordLog(str) {
        control.onLogRecord(str);
    }
}
